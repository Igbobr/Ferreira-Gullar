<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ferreirapb"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView 
         android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:alpha="0.9"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/enunciadoquiz1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="Existem muitas variações disponíveis de passagens de Lorem Ipsum, mas a
                 maioria sofreu algum tipo de alteração..."
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextEnunciadoQuiz1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:gravity="center"
                 />
        
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:background="#000000"
                android:gravity="center"
                android:orientation="vertical" >
    <RadioGroup
                    android:id="@+id/quiz1radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center" >
                

            <RadioButton
                android:id="@+id/rb01q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Número 01"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/rb02q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Número 02"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/rb03q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Número 03"
                android:textColor="#FFFFFF" />
        </RadioGroup>

                <TextView
                    android:id="@+id/enunciado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            

         

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:orientation="horizontal" >


            <Button
                android:id="@+id/botaoVoltarq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:onClick="voltar"
                android:background="@drawable/layout_shadow_gray"
                android:text="Voltar" />

            <Button
                android:id="@+id/botaoAvancarq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:onClick="avancar"
                android:background="@drawable/layout_shadow_gray"
                android:text="Avançar" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>

                    
</LinearLayout>